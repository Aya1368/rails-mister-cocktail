
<div class="cocktail">
<div class="container">
 <div class="cocktail-content ">
  <h1><%= @cocktail.name %></h1>
  <%= cl_image_tag @cocktail.photo.key %>

  <div class="table">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <!-- <th>Action</th> -->
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <!-- <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i> -->
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>

</div>
<%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="btn btn btn-dark btn-lg">Delete cocktail</i>
                <% end %>

</div>
</div>

